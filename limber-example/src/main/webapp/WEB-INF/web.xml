<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Limber example application</display-name>

    <filter>
        <filter-name>LimberFilter</filter-name>
        <filter-class>no.kantega.lab.limber.kernel.LimberFilter</filter-class>
        <init-param>
            <param-name>scan-package</param-name>
            <param-value>
                no.kantega.lab.limber.defaults,
                no.kantega.lab.limber.example.page
            </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>LimberFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>
